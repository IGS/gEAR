button#btn_search_users_datasets,
button#btn_search_others_datasets {
    display: none;
}
div.actions {
    margin-top: 20px;
}
div.alert-container {
  	position: fixed;
  	text-align: center;
  	z-index: 100;
}
div.dataset {
    margin-bottom: 25px;
}
div#dataset_list_c img.generic {
    opacity: 0.3;
}
div#login_checking,
div#login_warning {
    padding-bottom: 200px;
}
div#login_warning {
    display: none;
}

div#login_checking,
div#login_warning {
    margin-top: 50px;
}
div#main_content {
    display: none;
}
div#page_name {
    position: fixed;
    margin-top: 20px;
}

div#controls {
    border-right: 1px solid rgb(200,200,200);
    height: calc(85vh - 112px); /* 111px is height of footer*/
    overflow-y: auto;
    margin-right:10px;
}

div#main_panel,
div#dataset_sharing_box,
div#profile_sharing_box {
    margin-left: 270px;
      /*top: 30px;*/
      top: 20px;
    min-height: 750px;
}

div#dataset_search_controls_users,
div#view_options,
div#sort_options {
    margin-bottom: 15px;
}
div#dataset_sharing_box,
div#profile_sharing_box {
    display: none;
}
h3 {
    margin-bottom: 20px;
}
img#checking_indicator {
    height: 30px;
    width: 30px;
    margin-right: 10px;
}
div#dataset_arrangement_c {
    display: none;
}
#dataset_arrangement {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 600px;
}
#dataset_arrangement div {
    /*margin: 3px 3px 3px 0;*/
    padding: 1px;
    float: left;
    width: 196px;
    height: 200px;
    text-align: center;
    overflow: hidden;
    overflow-wrap: break-word;
    background: #fff;
}
.sortable_tile {
    border: 1px solid #2F0F3E;
}
.sortable_tile_title {
    max-height: 25%;
}
.sortable_tile_title span {
    background-color: #fff;
}

.sortable_tile_img {
    max-height: 75%;
}

/*.ui-resizable-handle {
    width: 9px;
}*/

/* centers Unshare/reshare buttons in #manage_sharing modal*/
.revoke_share, .reallow_share {
    margin-left: 22px;
}

/* needed to keep dataset attributes on their own lines when x-editable
 is initialized */
.dataset-info {
	 margin-left: 0px;
}

/* EDITABLE ELEMENTS*/
/* removes dashed blue underline */
.editable-click {
    border-bottom: none;
}

/* thumbnail container in schematic editable widget*/
#thumbnail_c {
	 margin-left: 0px;
}

/*For datasets that are currently uploading*/
div.pending {
    background-color: #f8f8ff;
}
div.failed {
    background-color: #f2dede;
}
h1.pending,
h1.failed {
    display: inline;
    vertical-align: middle;
    font-weight: bold;
    opacity: 0.7;
    margin: 0;
}

.checkbox > label {
    cursor: pointer;
}
.checkbox > label:hover {
    color: #A28CA7;
}
.no_results {
    color: #a9a9a9;
}
#selected_layout {
    cursor: pointer;
}
